<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/cultivo_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Nombre del cultivo -->
    <TextView
        android:id="@+id/tvNombreCultivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Nombre del Cultivo"
        android:textColor="#444444"
        android:textSize="16sp" />




    <!-- Fecha de cosecha, alineada a la derecha -->
    <TextView
        android:id="@+id/tvFechaCosecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="54dp"
        android:layout_toStartOf="@+id/ivConfig"
        android:layout_toEndOf="@+id/tvNombreCultivo"
        android:text="Fecha de Cosecha"
        android:textColor="#888888"
        android:textSize="14sp" />

    <!-- Icono de configuración alineado a la derecha -->

    <ImageView
        android:id="@+id/ivConfig"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:contentDescription="Configuración"
        android:src="@drawable/settings" />
</RelativeLayout>
